<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.7.0//EN" "http://gwtproject.org/doctype/2.7.0/gwt-module.dtd">
<module rename-to='client'>

    <!-- Other module inherits -->
    <inherits name='com.sencha.gxt.ui.GXT' />

    <!-- GWTP stuff -->
    <inherits name='com.gwtplatform.dispatch.Dispatch' />
    <inherits name='com.gwtplatform.mvp.MvpWithEntryPoint' />

    <set-configuration-property name="gin.ginjector.modules" value="hu.astron.believers.bookstore.client.gin.ClientModul" />

    <!-- GXT Stylesheet -->
    <stylesheet src="reset.css" />

    <!-- GXT Theme -->
    <inherits name='com.sencha.gxt.theme.triton.Theme' />

    <set-property name="gxt.device" value="desktop" />

    <extend-property name="locale" values="hu" />
    <set-property name="locale" value="hu" />

    <!-- Specify the paths for translatable code -->
    <source path='client' />

</module>
